<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
                android:layout_height="match_parent"
             tools:context="com.example.winso.scheduleapp2.SwipibleFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
            android:text="Event Number: "
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_event_num"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:text="@string/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title" android:layout_below="@+id/tv_event_num"
            android:layout_centerHorizontal="true" android:textSize="30sp"/>
    <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/event_time"
            android:text="@+id/event_time"
            android:textSize="25dp"
            android:layout_below="@+id/event_title" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Empty Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/event_dsp" android:layout_below="@+id/event_time" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="No appintments for today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/event_dsp"
            android:layout_centerHorizontal="true" android:layout_marginTop="42dp" android:id="@+id/noapt_TV"
            android:textSize="30sp"/>
</RelativeLayout>
